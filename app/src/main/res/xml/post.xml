<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/rf4cvgtveze4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:paddingTop="40dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="169dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="41dp"
            android:layout_height="37dp"
            android:layout_marginEnd="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/rhjhhp9u5e04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textColor="#344054"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SwapZone Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="swapzone"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#126842"
                android:layout_marginStart="16dp"/>

            <!-- Post Input Section -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"

                android:gravity="center_vertical">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"> <!-- Tạo bóng đổ nếu cần -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Placeholder TextView (Hoặc dùng EditText nếu muốn nhập liệu) -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:hint="Add a post to call for donations."
                    android:textSize="12sp"
                    android:background="@drawable/ic_launcher_background"
                    android:textColorHint="#888888"
                    android:padding="8dp"/>

                <!-- Image Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_launcher_background" >
                </ImageView>

                <!-- Search Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_launcher_background"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="4dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="32dp"
                android:paddingVertical="8dp"

                android:gravity="center_vertical">

                <!-- Phần ảnh chiếm 15% chiều rộng -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"> <!-- Tạo bóng đổ nếu cần -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Phần còn lại gồm 2 dòng chữ và 1 icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>