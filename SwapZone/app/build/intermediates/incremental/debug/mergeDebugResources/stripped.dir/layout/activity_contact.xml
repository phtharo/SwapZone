<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rrl930hnia07"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="40dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:padding="16dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/back"
                android:scaleType="fitXY" />
            <!-- Logo và tên tổ chức -->
            <LinearLayout
                android:id="@+id/r6p21wp0un9v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/rdcd64kw8h05"
                    android:layout_width="66dp"
                    android:layout_height="67dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/avt"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/r7gdz4x49c88"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Vietnam Red Cross Society" />
            </LinearLayout>

            <!-- Đánh giá và người theo dõi -->
            <TextView
                android:id="@+id/rvwwf35jowab"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="27dp"
                android:layout_marginStart="43dp"
                android:layout_height="wrap_content"
                android:layout_width="208dp"
                android:text="5.0 / 5.0⭐  -  1000k followers" />

            <!-- Follow and Chat buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                > <!-- Tổng trọng số là 2 -->

                <!-- LinearLayout bên trái chứa nút Post -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingHorizontal="20dp"> <!-- Đẩy nội dung về bên trái -->

                    <Button
                        android:id="@+id/btnPostLeft"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="Chat"
                        android:textSize="16sp"
                        android:backgroundTint="#126842"
                        android:textColor="#FFFFFF"
                        android:layout_margin="8dp"/>
                </LinearLayout>

                <!-- LinearLayout bên phải chứa nút Post -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="20dp"> <!-- Đẩy nội dung về bên trái -->

                    <Button

                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="Follow"
                        android:textSize="16sp"
                        android:backgroundTint="#126842"
                        android:textColor="#FFFFFF"
                        android:layout_margin="8dp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- Line separator -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="30dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <!-- Contact Information title -->
            <TextView
                android:id="@+id/r35r800lf4y9"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
               android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Contact Information" />

            <!-- Contact Information -->
            <LinearLayout
                android:id="@+id/r1kjwmppl84p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33429155"
                android:paddingVertical="9dp"
                android:layout_marginBottom="232dp"
                android:layout_marginHorizontal="22dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rzsw16nhipzh"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="19dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Address:\nHead office: 82 Nguyen Du, Hai Ba Trung District, Hanoi\nSouthern representative office: 201 Nguyen Thi Minh Khai, District 1, Ho Chi Minh City\nTel: 0243 8224 030\nFacebook: https://www.facebook.com/redcross.org.vn/\nEmail: International@redcross.org.vn" />
            </LinearLayout>

            <!-- Placeholder image -->


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#126842"
        android:gravity="center">

        <ImageView android:id="@+id/home" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_home" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/shop" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/shop2" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/add" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_add" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/regis" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/regis" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/pro" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_acc" android:layout_marginHorizontal="32dp"/>
    </LinearLayout>
</LinearLayout>
