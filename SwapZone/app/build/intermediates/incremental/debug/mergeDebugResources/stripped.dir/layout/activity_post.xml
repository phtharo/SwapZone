<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/rf4cvgtveze4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:paddingTop="40dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="169dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="41dp"
            android:layout_height="37dp"
            android:layout_marginEnd="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/rhjhhp9u5e04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textColor="#344054"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SwapZone Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="swapzone"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#126842"
                android:layout_marginStart="16dp"/>

            <!-- Post Input Section -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"

                android:gravity="center_vertical">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"> <!-- Tạo bóng đổ nếu cần -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/oet"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Placeholder TextView (Hoặc dùng EditText nếu muốn nhập liệu) -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:hint="Add a post to call for donations."
                    android:textSize="12sp"
                    android:background="@drawable/bg_rounded"
                    android:textColorHint="#888888"
                    android:padding="8dp"/>

                <!-- Image Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/image_resizer_svgrepo_com" />

                <!-- Search Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_rounded"
                    android:src="@drawable/search_svgrepo_com"
                    android:padding="4dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="32dp"
                android:paddingVertical="8dp"

                android:gravity="center_vertical">

                <!-- Phần ảnh chiếm 15% chiều rộng -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"> <!-- Tạo bóng đổ nếu cần -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/oet"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Phần còn lại gồm 2 dòng chữ và 1 icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Dòng chữ trên -->

                    <!-- Dòng chữ dưới -->

                    <!-- Icon nằm bên cạnh dòng chữ dưới -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SaiGon Chilren's Charity CIO "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="1h. Thanh Khê, Đà Nẵng"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:contentDescription="Icon"
                        android:src="@drawable/friend_svgrepo_com"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>



            <!-- Post Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp">

                <EditText
                    android:id="@+id/etPostContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your post content here..."
                    android:textSize="12sp"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:layout_marginBottom="12dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sg" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút POST -->
    <Button
        android:id="@+id/btnPost"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Post"
        android:textSize="16sp"
        android:backgroundTint="#126842"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="end"/>

    <!-- Bottom Navigation Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#126842"
        android:gravity="center">

        <ImageView android:id="@+id/home" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_home" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/shop" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/shop2" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/add" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_add" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/regis" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/regis" android:layout_marginHorizontal="32dp"/>
        <ImageView android:id="@+id/pro" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_acc" android:layout_marginHorizontal="32dp"/>
    </LinearLayout>

</LinearLayout>
