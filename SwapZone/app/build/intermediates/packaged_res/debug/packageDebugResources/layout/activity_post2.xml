<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView

            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Order"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#344054"/>
    </LinearLayout>

    <!-- Scrollable Order List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Order Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/h11"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAMEREI"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recycle Boucle Knit Cardigan Pink"
                        android:textSize="12sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting for goods"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total products: 1"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/deli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:background="@color/black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/h12"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOHAN"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black life jacket"
                        android:textSize="12sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting for goods"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total products: 1"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/deli1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:background="@color/black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- Order Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/h13"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOHAN"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black life jacket"
                        android:textSize="12sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting for goods"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total products: 1"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/deli2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="12sp"
                        android:textColor="#12B669"
                        android:background="@color/black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
