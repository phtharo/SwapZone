<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="32dp"
                android:paddingVertical="8dp"

                android:gravity="center_vertical">

                <!-- Phần ảnh chiếm 15% chiều rộng -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"> <!-- Tạo bóng đổ nếu cần -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/oet"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- Phần còn lại gồm 2 dòng chữ và 1 icon -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Dòng chữ trên -->

                    <!-- Dòng chữ dưới -->

                    <!-- Icon nằm bên cạnh dòng chữ dưới -->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SaiGon Chilren's Charity CIO "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="1h. Thanh Khê, Đà Nẵng"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:contentDescription="Icon"
                        android:src="@drawable/friend_svgrepo_com"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dear Respected Benefactors, Organizations, Individuals, and the Community, With the aim of sharing difficulties and bringing joy to underprivileged children, the charity program To School with You has been launched. Our goal is to collect clothing and school supplies to encourage and support these children in their pursuit of education and knowledge.
Dear Respected Benefactors, the charity progr. Their pursuit of education and knowledge.Dear Respected Benefactors, Organizations, Individuals, and the Community, With the aim of sharing difficulties and bringing joy to underprivileged children, the charity program To School with You has been launched.Their pursuit of education and knowledge."
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sg" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    > <!-- Tổng trọng số là 2 -->

                    <!-- LinearLayout bên trái chứa nút Post -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingHorizontal="32dp"> <!-- Đẩy nội dung về bên trái -->

                        <Button
                            android:id="@+id/btnPostLeft"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Post"
                            android:textSize="16sp"
                            android:backgroundTint="#126842"
                            android:textColor="#FFFFFF"
                            android:layout_margin="8dp"/>
                    </LinearLayout>

                    <!-- LinearLayout bên phải chứa nút Post -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingHorizontal="32dp"> <!-- Đẩy nội dung về bên trái -->

                        <Button

                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Chat"
                            android:textSize="16sp"
                            android:backgroundTint="#126842"
                            android:textColor="#FFFFFF"
                            android:layout_margin="8dp"/>
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>